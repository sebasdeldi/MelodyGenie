	<%else%>

	<!--NAVBAR -->
	<div class="ui fixed inverted menu">
	  <div class="ui container">
	    <a  class="header item search-again" >
	      Melody<span class="my_blue">Genie</span>
	    </a>
	    <div class="item">
	    	<p class="smaller">
	    		<span class="small_recommendation">
