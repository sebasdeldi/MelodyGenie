<div class="container">

	<div>
	    <%= form_tag( main_index_path, :method => "get") do %>
	      <%= label_tag(:artist_search, "Search for:") %>
	      <%= text_field_tag(:artist_search) %>
	      <%= submit_tag("Search") %>
	    <% end %>

	</div>

	<% if @artist == nil %>
		<p>Your Artist was not found.</p>
	<%else%>
		<p>Your Artist is <%= @artist.name %>, so you might like the following artists:</p>

		<% if @artist.images.any? %>
			<img class="artist_profile_pic" src="<%= @artist.images.first["url"] %>" alt=":)">
			<%else%>
				<p>No picture available :(</p>
		<%end%>
		

		<div class="related-artists">
			<% @relateds_array.each do |related| %>
				<br>
				<%= related.name %>

				<% if related.images.any? %>
					<img class="artist_profile_pic" src=" <%=related.images.first["url"] %>" alt=":)">
					<%else%>
						<p>No picture available :(</p>
				<%end%>

				<br>
			<%end%>
		</div>
	<%end %>
</div>



